      \RenewDocumentCommand \cslsetup { m }
        { \tl_set:Nn \l__csl_bibliography_setup_tl {#1} }
      \RenewDocumentEnvironment { thebibliography } { m +b }
        { \tl_set:Nn \l__csl_bibliography_tl { {#1} #2 } }
